
{% extends "layout.jinja2" %}
{% block title %}
My Learning Journal
{% endblock %}
{% block body %}
{% if entries %}
    {% for entry in entries %}
        <h2>
            <a href = "{{ request.route_url('detail', id=entry.id) }}">{{ entry.title }}</a>
        </h2>
        <h3>
        <a href = "{{ request.route_url('update', id=entry.id) }}">Edit</a>
        </h3>  
        <p class = "lead">by Jordan Schatzman</p>
        <p>Posted on {{entry.date}}</p>
        <br/>
    {% endfor %}
{% else %}
    <p>This journal is empty</p>
{% endif %}
{% endblock %}
